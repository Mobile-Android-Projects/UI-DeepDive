<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android ="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="false">
    <layer-list>
      <item>
        <shape>
          <gradient android:angle="270" android:startColor="@color/colorOrange" android:endColor="@android:color/white"/>
          <stroke android:width="2dp" android:color="@android:color/black"/>
          <corners android:radius="5dp"/>
        </shape>
      </item>
    </layer-list>
  </item>

  <item android:state_pressed="true">
    <layer-list>
      <item>
        <shape>
          <gradient android:angle="270" android:startColor="@color/depositBlue" android:endColor="@android:color/white"/>
          <stroke android:width="2dp" android:color="@android:color/black"/>
          <corners android:radius="5dp"/>
        </shape>
      </item>
    </layer-list>
  </item>
</selector>
